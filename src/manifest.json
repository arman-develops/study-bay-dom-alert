{
    "manifest_version": 3,
    "name": "DOM Alert Extension",
    "version": "1.0.0",
    "description": "Notifies when a specific DOM element changes on the target website",
    "permissions": ["notifications", "scripting"],
    "web_accessible_resources": [
        {
            "resources": ["sound-notification.mp3"],
            "matches": ["<all_urls>"]
        },
        {
            "resources": ["icon.png"],
            "matches": ["<all_urls>"]
        }
    ],
    "host_permissions": ["https://studybay.com/*"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://studybay.com/home/*"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_title": "DOM Watcher Active"
    }
}