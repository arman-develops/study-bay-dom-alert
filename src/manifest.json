{
  "manifest_version": 3,
  "name": "Enhanced Bidding Extension",
  "version": "1.0",
  "description": "Track auctions and orders with notifications",
  
  "permissions": [
    "notifications",
    "storage",
    "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
        "js": [
            "content.js"
        ],
      "type": "module"
    }
  ],
  
  "background": {
    "service_worker": "study-bay-alert.js"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["sound-notification.mp3", "sound-notification.wav"],
      "matches": ["<all_urls>"]
    }
  ]
}